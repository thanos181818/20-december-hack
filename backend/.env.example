# Database connection string
# Railway will auto-provide this as DATABASE_URL when you add PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5433/appareldesk

# JWT Secret Key (generate a random string for production)
SECRET_KEY=your-super-secret-key-change-in-production

# Frontend URL for CORS (Railway will give you this after deploying frontend)
FRONTEND_URL=http://localhost:8080

# Admin Credentials (JSON format - for production use)
# Copy and paste the contents of your admins.json file here
# Example: {"admins":[{"email":"admin@example.com","password":"securepassword","name":"Admin"}]}
ADMINS_JSON=
